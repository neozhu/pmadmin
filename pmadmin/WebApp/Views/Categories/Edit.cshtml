 </div>
        </div>
    </div>
</div>

 


@section Scripts {
   
    <script type="text/javascript">
	
    		var categoryid = 0;
		var ObjectState = "Modified";   
                                 
             var $productsdatagrid = $('#products_datagrid');
                        $(document).ready(function () {
				categoryid = $('#Id', 'form').val();
                $('form').submit(function () {
					if (!$('form').valid())
						return false;
                    //var token = $('[name=__RequestVerificationToken]').val();
                    //var serializedForm = $(this).serialize();
                    var actionurl = $(this).attr('action');
                    						if (!products_endEditing())
								return false;                                         
                        var products = $productsdatagrid.datagrid('getChanges');
                                         
                     var newitem = {
						

                        								//primaryKey   
								Id: categoryid,
                                                        Name: $('#Name', 'form').val(),
                        								//detailTables
                                Products: products ,
                                                ObjectState:ObjectState 
                    };
                    $.ajax({
                        url: actionurl,
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify(newitem),
                        success: function (result) {
                            if (result.success) {
                                self.location = "/Categories/Index";
                            } else {
                                alert(result.err);
                            }
                            
                        },
                        error: function (result) {
                            console.log(result.statusText + result.responseText);
                            alert(result.statusText + result.responseText);
                        }
                    });
                    return false;
                    

                });
            });
      
      </script>

}
 
