							return row.CompanyName;
						},
						editor:{
							type:'combobox',
							options:{
								prompt:'所在公司' ,
								valueField:'Id',
								textField:'Name',
								method:'get',
								url:'/Departments/GetCompanies',
								required:true
							}
						}">@Html.DisplayNameFor(model => model.CompanyId)</th>

		   
			   
						</tr>
				</thead>
				</table>
