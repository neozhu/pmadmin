	 <div class="datagrid-content">
		<table id="departments_datagrid" class="easyui-datagrid"   style="width:auto;height:auto"
				   data-options="
				 rownumbers:true,
				 checkOnSelect:true,
				 selectOnCheck:true,
				 idField:'Id',
				 sortName:'Id',
				 sortOrder:'desc',
				 remoteFilter: true,
				 singleSelect: true,
				 toolbar: '#departments_toolbar',
				 url: '/Departments/GetData',
				 method: 'get',
				 onClickCell: onClickCell,
				 pagination: 'true'
